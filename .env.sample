OPENAI_API_KEY=your_api_key

# Realtime session defaults (override per environment as needed)
OPENAI_REALTIME_MODEL=gpt-realtime
OPENAI_REALTIME_TRANSCRIPTION_MODEL=gpt-4o-mini-transcribe
OPENAI_REALTIME_VOICE=sage
NEXT_PUBLIC_REALTIME_MODEL=gpt-realtime
NEXT_PUBLIC_REALTIME_TRANSCRIPTION_MODEL=gpt-4o-mini-transcribe
NEXT_PUBLIC_REALTIME_VOICE=sage

# Digital Agency (JGrants) MCP connector
# See https://digital-gov.note.jp/n/n09dfb9fa4e8e for the official server runbook.
NEXT_PUBLIC_JGRANTS_MCP_SERVER_URL=https://your-jgrants-mcp-server.example/mcp
NEXT_PUBLIC_JGRANTS_MCP_SERVER_LABEL=digital-agency-jgrants
# Optional: comma-separated list of MCP tool names to allow (leave blank to expose all)
NEXT_PUBLIC_JGRANTS_MCP_ALLOWED_TOOLS=
# Optional: set to "always" to force manual approval flow
NEXT_PUBLIC_JGRANTS_MCP_REQUIRE_APPROVAL=never
